{
  "manifest_version": 3,
  "name": "Chrome Extension Boilerplate",
  "description": "Chrome Extension Boilerplate including RPC, API, React, Webpack, TypeScript and more!",
  "version": "0.0.1",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://example.com/*"],
      "css": ["./styles/styles.css"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["storage"],
  "host_permissions": ["https://icanhazdadjoke.com/"],
  "web_accessible_resources": [{
    "resources": ["icons/icon16.png", "icons/icon48.png", "icons/icon128.png"],
    "matches": []
  }],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://icanhazdadjoke.com"
  }
}
